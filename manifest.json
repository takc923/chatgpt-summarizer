{
  "manifest_version": 3,
  "name": "chatgpt-summarizer",
  "version": "1.0",
  "description": "Summarize web pages using ChatGPT",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "action": {
    "default_title": "Summarize this page with ChatGPT",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}